# LinkGen AI - Environment Configuration Example

# Application
APP_ENV=development
APP_PORT=8080
LOG_LEVEL=info

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=linkgenai
MONGO_USERNAME=
MONGO_PASSWORD=

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_QUEUE_NAME=draft_generation

# LLM Service Configuration
LLM_SERVICE_URL=http://localhost:11434
LLM_MODEL=llama2
LLM_TIMEOUT=30s
LLM_MAX_RETRIES=3

# LinkedIn API Configuration
LINKEDIN_API_URL=https://api.linkedin.com/v2
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Scheduler Configuration
IDEA_GENERATION_INTERVAL=6h
IDEAS_PER_BATCH=10

# Draft Generation Configuration
POSTS_PER_DRAFT=5
DRAFT_TIMEOUT=120s
