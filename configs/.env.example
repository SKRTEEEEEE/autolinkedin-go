# Environment variables template for local development
# Copy this file to .env and fill in your values

# Environment
LINKGEN_ENV=development

# Server Configuration
LINKGEN_SERVER_HOST=localhost
LINKGEN_SERVER_PORT=8000

# Database Configuration
LINKGEN_MONGODB_URI=mongodb://localhost:27017
LINKGEN_MONGODB_DATABASE=linkgenai_dev
LINKGEN_MONGODB_PASSWORD=your-mongo-password

# NATS Configuration
LINKGEN_NATS_URL=nats://localhost:4222
LINKGEN_NATS_QUEUE=linkgen-dev-queue

# LLM Configuration
LINKGEN_LLM_ENDPOINT=http://localhost:8080
LINKGEN_LLM_API_KEY=your-llm-api-key
LINKGEN_LLM_TIMEOUT=60
LINKGEN_LLM_MAX_TOKENS=2000
LINKGEN_LLM_TEMPERATURE=0.7

# LinkedIn API Configuration
LINKGEN_LINKEDIN_API_URL=https://api.linkedin.com/v2
LINKGEN_LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKGEN_LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Scheduler Configuration
LINKGEN_SCHEDULER_INTERVAL=1h
LINKGEN_SCHEDULER_BATCH_SIZE=50

# Logging Configuration
LINKGEN_LOG_LEVEL=debug
LINKGEN_LOG_FORMAT=json
